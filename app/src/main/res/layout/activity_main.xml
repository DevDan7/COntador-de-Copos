<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_title"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pergunta"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="100dp"/>

    <TextView
    android:id="@+id/contador"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:textAlignment="center"
    android:textSize="60sp"
    tools:text="5"/>

    <TextView
        android:id="@+id/copos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copos"
        android:textAlignment="center"
        android:textSize="30sp" />



    <Button
        android:id="@+id/maisCopos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/maisDeCopos"
        android:textSize="30sp"
        android:layout_marginTop="120dp"/>


    <Button
        android:id="@+id/menosCopos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menosDeCopos"
        android:textSize="30sp"
        android:layout_marginTop="20dp"/>




</androidx.appcompat.widget.LinearLayoutCompat>